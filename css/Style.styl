//----------header-----------------//

.header-index
  display block
  position relative
  padding-top 6rem
  padding-bottom 40%
  background-image url(../img/amadaintima01.jpg)
  background-size cover
  background-repeat no-repeat
  color gris_claro  
  .headerIndex-text
    margin 0 0 3rem 0
    font-family ambrassador
    font-size 5rem
    line-height 3.8rem
    text-align center
  .headerIndex-img
    text-align center   
    display block 

.header-box
  width 50%
  padding-top 3rem
  padding-bottom 1rem
  background rgba(49,28,40,0.6)

.header-ofertas
  background-image url(../img/amadaintima02.jpg)
.header-store
  background-image url(../img/amadaintima03.jpg)
.header-carrito
  background-image url(../img/amadaintima04.jpg)
.header-blog
  background-image url(../img/amadaintima05.jpg)

.header-ofertas, .header-store, .header-blog, .header-noticia, .header-carrito
  display block
  position relative
  padding-top 6rem 
  padding-bottom 30%
  background-size cover
  background-repeat no-repeat
  color gris_claro
  .headerOfertas-text
    margin 0
    font-family ambrassador
    font-size 6.5rem
    line-height 7rem
    text-align center
  .headerOfertas-text2
    margin 0 0 3rem 0
    font-family ambrassador
    font-size 3rem
    line-height 3rem
    text-align center      

.headerArticle-box
  position absolute
  bottom 0
  font-weight 600
  font-family ambrassador
  padding 2rem
  width 100%
  background gris_claro
  color negro
  opacity .6
  .informacion-item
    text-align right
    .nombre-item
      font-size 30px
      margin 0
    .cuerpo-item
      font-size 20px
      margin 0
    .talla-item
      font-size 18px
      margin 0
    .precio-item
      font-size 30px
      margin 0
      color rojo_oscuro
    .comprar
      font-size 30px
      color rojo_oscuro
      margin 0
      & > a:hover
        color negro
        text-decoration none        

.header-store
  display block
  position relative
  padding-top 6rem
  background-size cover
  background-repeat no-repeat
  color gris_claro
  .headerStore-text
    margin 0
    font-family ambrassador
    font-size 6.5rem
    line-height 7rem
    text-align center
  .headerStore-text2
    margin 0 0 3rem 0
    font-family ambrassador
    font-size 3rem
    line-height 3rem
    text-align center

//------------block1--------------//

.block1-index
  padding 3rem 0
  background rojo_oscuro
  color gris_claro
  text-align center
  & > a
    text-decoration none
    color gris_claro
  .block1-index-titulo
    font-family ambrassador
    font-size 6rem
  .block1-index-parrafo
    text-align left
    padding 0 2em
    font-family raleway
    font-size 16px
    font-weight 500

.block1-ofertas
  padding 3rem 0 0 0
  background white
  color rojo_oscuro
  text-align center
  .item-ofertas
    position relative
    .block1-ofertas-img > img
      width 100%
    .informacion-item
      margin-bottom 2rem
      padding 1rem 0
      height auto
      width 100%
      bottom 0
      position relative
      background gris_claro
      .cuerpo-item
        line-height 16px
        display block
        margin-bottom 0
        font-family ambrassador
        font-size 16px
        font-weight 500
      .precio-item
        display block
        margin-bottom 0
        font-family ambrassador
        font-size 20px
        font-weight 500
      .nombre-item
        line-height 1.8rem
        margin-bottom 1rem
        font-family ambrassador
        font-size 25px
        color negro
      .talla-item
        margin-bottom 0
        font-family ambrassador
        font-size 16px
        color negro
      .ver-item
        margin-bottom 0
        font-family ambrassador
        font-size 25px
        color rojo_oscuro

.block1-articulo
  padding 3rem 0 0 0
  background white
  color rojo_oscuro
  text-align center
  .item-articulo
    margin-bottom 3rem
    position relative
    .block1-articulo-img > img
      width 100%

.block1-blog
  padding 2rem
  .noticia 
    text-align center  
    border-bottom 1px solid negro
    & > a
      width 49%
      display inline-block
      margin 1rem 0
      font-size 16px
      font-family ambrassador
      font-weight 600
      padding 1rem
      &:hover
        text-decoration none
    .titulo
      margin 0
      font-family ambrassador
      font-size 20px
      color negro
      font-weight 600
    .share
      transition .3s
      color negro
      background marron_claro
      &:hover
        background marron_oscuro
    .ver
      transition .3s
      color gris_claro
      background rojo_oscuro
      &:hover
        background rojo_claro 

.block1-noticia
    font-family raleway
    font-size 16px
    text-align left
    display inline-block
    padding 4rem 2rem 0 

.block1-carrito
  padding 2rem 
  display block
  .item-carrito
    border-bottom 1px solid negro
    .precio
      float left
      margin-top 1rem
      margin-right 10%
      display block
      font-family ambrassador
      font-size 30px
      color rojo_oscuro
    .producto
      margin-top 1rem
      text-align right
      display block
      .nombre
        font-size 22px
        color rojo_oscuro
        font-family ambrassador
      .talla, .cantidad
        font-size 18px
        color negro
        font-family ambrassador

.block1-politicas
  padding 5rem 1rem
  text-align center
  .politicas-titulo
    font-family ambrassador
    font-size 30px
    color negro 
  .politicas-texto
    width 100%
    font-size 16px
    text-align left
      

.block2-blog
  display none

.box-light
  display none
  width 100%
  background negro
  opacity .7
  position absolute
  top 0
  padding 40% 0
  height 150%

.socialmedia
  margin 0
  text-align center
  & > img
    margin 1rem 
    width 80%
    
.formulario-carrito
    text-align center

.texto-formulario
  font-family ambrassador
  font-size 20px
  font-weight 600
  text-align center
    
.block2-carrito > .formulario-carrito > form > input
    width 90%
    padding 1rem
    font-family ambrassador
    color negro
    padding 1rem
    background gris_claro
    border 1px solid rojo_claro
    margin 1rem auto
    font-size 16px
    font-weight 600

.btn-confirmar
    margin 0 auto
    text-align center
    width 90%
    color white
    background rojo_oscuro
    font-family ambrassador
    font-size 30px
    padding 1rem
    transition 0.1s
    &:hover
      background negro

.store-iconos
  padding 2rem 0 0 0
  position relative
  .store-categoria
    text-align center
    .store-ico > img, .store-descripcion
      width 80%
    .store-descripcion
      width 100%
      font-family ambrassador
      font-size 20px
      color negro
      font-weight 600

.block2-index
  padding 3rem 0
  background white
  color negro
  text-align center
  & > a
    text-decoration none
    color negro
    
.block2-index-titulo
  font-family ambrassador
  font-size 4.5rem
  
.block2-index-parrafo
  text-align left
  padding 0 2em
  font-family raleway
  font-size 16px
  font-weight 500

.block3-index
  padding 3rem
  text-align center
  background white
  color negro
  & > a
    text-decoration none
    color negro
  
.block4-index
  padding 3rem
  text-align center
  background rojo_oscuro
  color gris_claro
  & > a
    text-decoration none
    color gris_claro


.volver
  display block
  text-align center
  padding 1rem 0
  .btn-volver
    font-family ambrassador
    color rojo_oscuro
    font-size 30px 
    text-align center
    text-decoration none
    transition .5s
    &:hover
      color negro    

footer
  text-align center
  .titulo-contacto
    display none
    font-family ambrassador
    font-size 25px
    color negro
    font-weight 600
    margin 20px 0
  .footer
    margin-bottom 30px
    background negro
    color gris_claro
    padding 3rem 0
    & > .footer-ofertas
      border-right 1px solid gris_claro
    .footer-ofertas, .footer-carrito
      display inline-block
      font-family ambrassador
      font-size 3rem
      width 50%
      margin 0 -1px
      text-align center
      & > p
        color gris_claro
        margin 0
        padding 1rem
  .form
    display none
    margin-bottom 30px
    input, textarea
      margin 0 auto
      font-size 16px
      font-family ambrassador
      display block
      width 90%
      padding 5px
      margin-bottom 5px
  .derechos
    padding 10px 0
    border-top 1px solid negro
    opacity .6
    margin-top 30px
    width 90%
  p
    display inline-block
    margin 0 10px
    color negro
    text-decoration none
    & > a
      color negro
      text-decoration none
      transition .3s
      &:hover
        padding 5px
        border-bottom 3px solid rojo_oscuro
        color rojo_oscuro
        text-decoration none
  
      

      
