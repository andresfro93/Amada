//-----------btn-------------//
.ingresar-pedido
  top 0
  left 50%
  position fixed
  z-index 9999
  display none 
  background gris_claro
  color rojo_oscuro
  padding 10px
  font-family ambrassador
  font-weight 600
  font-size 20px
  text-decoration none
  &:hover
    text-decoration none
    color negro
  
.vista-rapida
  padding 10px
  color  negro
  border none
  background gris_claro
  font-family ambrassador
  font-size 16px
  font-weight 600
